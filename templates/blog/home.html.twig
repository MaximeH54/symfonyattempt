{% extends 'base.html.twig' %}

{% block body %}Accueil{% endblock %}

{% block stylesheets %}
  <style>
    h1 {
      color: green;
  }
</style>
{% endblock %}

{% block body %}
  <h1>Mon blog</h1>

  {% for article in articles %}
    <h3>({ article.title })</h3>
    <span>{{ article.date.format('d/m/Y') }}</span>
    {% if article.image %}
    <img src="{{ article.image }}">
    {% endif %}
    <p>{{ article.content }}</p>
{% endfor %}
{% endblock %}
